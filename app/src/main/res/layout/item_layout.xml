<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/icon"/>
    <LinearLayout android:layout_weight="1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginLeft="15dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="18sp" android:id="@+id/appname" android:layout_weight="1" android:textColor="#000000"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="16sp" android:id="@+id/packagename" android:layout_weight="1" android:textColor="#000000"/>
    </LinearLayout>

    <CheckBox
            android:id="@+id/checkbox"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" style="@android:style/Widget.CompoundButton.CheckBox"/>
</LinearLayout>
